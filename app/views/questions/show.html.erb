<% content_for(:title, "Stack Stuff") %>

<h1><%= @question.description %></h1>

<% if @question.answers.any? %>
<h4>Here are the answers for this question:</h4>

<ul>
  <% @question.answers.each do |answer| %>
  <li>
    <%= answer.info %> |
    <%= link_to "Edit", edit_question_answer_path(@question, answer) %> |
    <%= link_to "Delete", question_answer_path(@question, answer),
    :data => {:confirm => "Are you sure?",
      :method => "delete"} %>
    </li>
    <% end %>
  </ul>
  <% else %>
  <p>There are no answers yet!</p>
  <% end %>

  <div class="links"
  <p><%= link_to "Add a answer", new_question_answer_path(@question) %>
    <%= link_to "Delete question", question_path(@question),
    :data => {:confirm => "Are you sure?",
      :method => "delete"} %>
      <%= link_to "Return to questions", questions_path %></p>
    </div>
